# Auto detect text files and perform LF normalization
* text=auto

# Python files always use LF
*.py text eol=lf
*.pyi text eol=lf

# Config files
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Shell scripts
*.sh text eol=lf

# Batch files use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
